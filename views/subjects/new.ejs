<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Add Subject</h1>
    </div>
    <div class="col-md-6 offset-md-3">
        <form action="/subjects" method="POST">
            <div class="mb-3">
                <label class="form-label" for="name">Subject Name</label>
                <input class="form-control" type="text" name="name" placeholder="subject name" id="name" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="subCode">Subject Code</label>
                <input class="form-control" type="text" name="subCode" placeholder="subject code" id="subCode" required>
            </div>

            <div class="mb-3">
                <button class="btn btn-success">Add Subject</button>
            </div>
        </form>
    </div>