<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Subject</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/subjects/<%= subject._id %>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="name">Subject Name</label>
                    <input class="form-control" type="text" name="name" placeholder="subject name" id="name" value="<%= subject.name %>" required>
                </div>
        
                <div class="mb-3">
                    <label class="form-label" for="subCode">Subject Code</label>
                    <input class="form-control" type="text" name="subCode" placeholder="subCode" id="subCode" value="<%= subject.subCode %>" required>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Edit Subject</button>
                </div>
            </form>
            <a class="btn btn-success" href="/subjects/<%= subject._id %>">Cancel</a>
        </div>
    </div>